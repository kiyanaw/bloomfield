<w canon="kêkway" class="pr" gcat="0sPR" sgloss="something" stem="kîkway">kêkway</w>
,
<w canon="ê-ispatinâyik" class="vii" gcat="0oIIcnj" preverbs="ê|cnj" sgloss="be_hill" stem="ispatinâ" suffix="-yik">êh-ispatinâyik</w>
<w canon="êkota" class="ipc" gcat="IPC" sgloss="there" stem="êkota">êkot</w>
