<w canon="ohci" class="ipc" gcat="IPC" sgloss="thence" stem="ohci">ohci</w>
<w canon="sipwêhtêw" class="vai" gcat="3sAI" sgloss="leave" stem="sipwêhtê" suffix="-w">sipwêhtêw</w>
,
<w canon="kêkâ-mitâtaht" class="ipc" gcat="IPC" preverbs="kêkâ|almost" sgloss="ten" stem="mitâtaht">kêkâ-mitâtaht</w>
